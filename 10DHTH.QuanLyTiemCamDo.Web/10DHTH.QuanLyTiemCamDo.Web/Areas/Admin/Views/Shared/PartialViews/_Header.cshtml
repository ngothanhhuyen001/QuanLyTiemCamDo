@using Microsoft.AspNetCore.Http
@using _10DHTH.QuanLyTiemCamDo.Web.Helpers;
<header>
    <nav class="navbar navbar-expand navbar-light navbar-top">
        <div class="container-fluid">
            <a href="#" class="burger-btn d-block">
                <i class="bi bi-justify fs-3"></i>
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <h4 class="mb-0 ms-3">@ViewData["Title"]</h4>
                <div class="dropdown">
                    <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="user-menu d-flex">
                            <div class="user-name text-end me-3" style="padding-top:1rem">
                                <h6 class="mb-0 text-gray-600">@Context.Session.GetString("AccountFullName")</h6>
                            </div>
                            <div class="user-img d-flex align-items-center">
                                <div>
                                    <img id="avatar-account-header" class="avatar-header-information" src="@Context.Session.GetString("AccountUrlAvatar")" />
                                </div>
                            </div>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end"
                        aria-labelledby="dropdownMenuButton"
                        style="min-width: 11rem">
                        <li>
                            <h6 class="dropdown-header" id="full-name-account-menu">Hello, @Context.Session.GetString("AccountFullName")!</h6>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Index">
                                <i class="icon-mid bi bi-person me-2"></i> 
                                My Profile
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Auth" asp-action="LogoutAdmin">
                                <i class="icon-mid bi bi-box-arrow-left me-2"></i>
                                Logout
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </nav>
</header>